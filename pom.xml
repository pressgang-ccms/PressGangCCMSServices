	</parent>

	<repositories>
		<repository>
			<id>JBoss</id>
			<url>https://repository.jboss.org/nexus/</url>
		</repository>
		<repository>
			<id>Apache</id>
			<url>http://repository.apache.org</url>
		</repository>
		<repository>
			<id>Zanata</id>
			<url>http://repository-zanata.forge.cloudbees.com/release/</url>
		</repository>
		<repository>
